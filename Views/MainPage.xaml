<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppSolo.Views.MainPage"
             Title="Workout Tracker">

    <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">
        <Label Text="Welcome to Workout Tracker!" 
               FontSize="24"
               HorizontalOptions="Center" />

        <Button Text="Plan a Workout"
                FontSize="18"
                Command="{Binding NavigateToWorkoutCommand}" />

        <Button Text="View Workout History"
                FontSize="18"
                Command="{Binding NavigateToHistoryCommand}" />
    </VerticalStackLayout>
</ContentPage>

